<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_layout_height"
        android:layout_marginTop="@dimen/title_layout_marginTop"
        android:text="@string/title_text"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="@dimen/title_textSize"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/count_layout_marginTop"
        android:fontFamily="sans-serif-black"
        android:text="@string/count_text"
        android:textColor="@color/black"
        android:textSize="@dimen/count_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view" />

    <ImageView
        android:id="@+id/five_cents_image_view"
        android:layout_width="@dimen/image_layout_width"
        android:layout_height="@dimen/image_layout_height"
        android:layout_marginStart="@dimen/image_marginStart"
        android:layout_marginTop="@dimen/top_images_marginTop"
        android:layout_marginEnd="@dimen/image_one_marginEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_text_view"
        app:srcCompat="@drawable/five_cents" />

    <ImageView
        android:id="@+id/ten_cents_image_view"
        android:layout_width="@dimen/image_layout_width"
        android:layout_height="@dimen/image_layout_height"
        android:layout_marginTop="@dimen/top_images_marginTop"
        android:layout_marginEnd="@dimen/image_marginEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/five_cents_image_view"
        app:layout_constraintTop_toBottomOf="@+id/count_text_view"
        app:srcCompat="@drawable/ten_cents" />

    <TextView
        android:id="@+id/five_cents_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/textView_marginStart"
        android:layout_marginTop="@dimen/textView_marginTop"
        android:text="@string/five_cents_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/five_cents_image_view" />

    <TextView
        android:id="@+id/ten_cents_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textView_marginTop"
        android:layout_marginEnd="@dimen/textView_marginEnd"
        android:text="@string/ten_cents_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ten_cents_image_view" />

    <ImageView
        android:id="@+id/quarter_image_view"
        android:layout_width="@dimen/image_layout_width"
        android:layout_height="@dimen/image_layout_height"
        android:layout_marginStart="@dimen/image_marginStart"
        android:layout_marginTop="@dimen/bottom_images_marginTop"
        app:layout_constraintEnd_toStartOf="@+id/dollar_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/five_cents_text_view"
        app:srcCompat="@drawable/quarter" />

    <ImageView
        android:id="@+id/dollar_image_view"
        android:layout_width="@dimen/image_layout_width"
        android:layout_height="@dimen/image_layout_height"
        android:layout_marginTop="@dimen/bottom_images_marginTop"
        android:layout_marginEnd="@dimen/image_marginEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/quarter_image_view"
        app:layout_constraintTop_toBottomOf="@+id/ten_cents_text_view"
        app:srcCompat="@drawable/one_dollar" />

    <TextView
        android:id="@+id/quarter_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/textView_marginStart"
        android:layout_marginTop="@dimen/textView_marginTop"
        android:text="@string/quarter_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quarter_image_view" />

    <TextView
        android:id="@+id/one_dollar_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textView_marginTop"
        android:layout_marginEnd="@dimen/textView_marginEnd"
        android:text="@string/dollar_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dollar_image_view" />


</androidx.constraintlayout.widget.ConstraintLayout>